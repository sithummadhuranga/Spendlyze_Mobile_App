<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Spendlyze" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnBackground">@color/on_background</item>

        <!-- Text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Spendlyze.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Spendlyze.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Spendlyze.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Spendlyze.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Spendlyze.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Spendlyze.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Spendlyze.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Spendlyze.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Spendlyze.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Spendlyze.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Spendlyze.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.Spendlyze.Button</item>

        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Spendlyze.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Spendlyze.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Spendlyze.LargeComponent</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.Spendlyze.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">96sp</item>
    </style>

    <style name="TextAppearance.Spendlyze.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TextAppearance.Spendlyze.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TextAppearance.Spendlyze.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.Spendlyze.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Spendlyze.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Spendlyze.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Spendlyze.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Spendlyze.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Spendlyze.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Spendlyze.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Spendlyze.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.Spendlyze.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Spendlyze.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Spendlyze.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>